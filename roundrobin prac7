#include <stdio.h>

int main() {
    int n, quantum;

    printf("Enter number of processes: ");
    scanf("%d", &n);

    int bt[n], rt[n], ct[n], wt[n], tat[n], st[n], response[n];
    int visited[n];  // to check first execution

    for(int i = 0; i < n; i++) {
        printf("Enter Burst Time for Process %d: ", i + 1);
        scanf("%d", &bt[i]);
        rt[i] = bt[i];      // remaining time
        visited[i] = 0;     // not started yet
    }

    printf("Enter Time Quantum: ");
    scanf("%d", &quantum);

    int time = 0, remain = n;

    while(remain > 0) {
        for(int i = 0; i < n; i++) {
            if(rt[i] > 0) {

                if(visited[i] == 0) {
                    st[i] = time;                  // Start Time
                    response[i] = st[i];           // RT = ST - AT (AT=0)
                    visited[i] = 1;
                }

                if(rt[i] <= quantum) {
                    time += rt[i];
                    rt[i] = 0;
                    ct[i] = time;                  // Completion Time
                    remain--;
                }
                else {
                    time += quantum;
                    rt[i] -= quantum;
                }
            }
        }
    }

    float total_ct = 0, total_wt = 0, total_tat = 0;

    for(int i = 0; i < n; i++) {
        tat[i] = ct[i];                // TAT = CT - AT (AT=0)
        wt[i] = tat[i] - bt[i];        // WT = TAT - BT

        total_ct += ct[i];
        total_wt += wt[i];
        total_tat += tat[i];
    }

    printf("\nP\tBT\tST\tCT\tTAT\tWT\tRT\n");
    for(int i = 0; i < n; i++) {
        printf("P%d\t%d\t%d\t%d\t%d\t%d\t%d\n",
               i+1, bt[i], st[i], ct[i], tat[i], wt[i], response[i]);
    }

    printf("\nAverage CT = %.2f", total_ct / n);
    printf("\nAverage WT = %.2f", total_wt / n);
    printf("\nAverage TAT = %.2f\n", total_tat / n);

    return 0;
}
